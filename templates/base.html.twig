			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}

		{% endblock %}
	</head>
	<body>
		{% block header %}
			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				<div class="container-fluid">
					{% if is_granted('ROLE_ADMIN') %}
						<a class="navbar-brand" href="{{ path('admin_home') }}">MTM Shop</a>
					{% else %}
						<a class="navbar-brand" href="{{ path('customer_home') }}">MTM Shop</a>
					{% endif %}
					
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('product_index') }}">Product</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="{{ path('category_index') }}" aria-disabled="true">Category</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="{{ path('manufacturer_index') }}" aria-disabled="true">Manufactor</a>
							</li>
							{% if app.request.pathinfo == path('product_index') %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('product_add') }}"  aria-disabled="true">Add</a>
								</li>
							{% endif %}
							{% if app.request.pathinfo == path('category_index') %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('category_add') }}"  aria-disabled="true">Add</a>
								</li>
							{% endif %}
							{% if app.request.pathinfo == path('manufacturer_index') %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('manufacturer_add') }}"  aria-disabled="true">Add</a>
								</li>
							{% endif %}
							{% if app.request.pathinfo == path('admin_home') %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('order_index') }}" aria-disabled="true">Cart</a>
								</li>
							{% endif %}
							
							<a class="nav-link" href="{{ path('app_logout') }}" aria-disabled="true">Logout</a>	
							
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('product_list') }}">Product</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="{{ path('category_list') }}" aria-disabled="true">Category</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="{{ path('manufacturer_list') }}" aria-disabled="true">Manufactor</a>
							</li>

							<a class="nav-link" href="{{ path('order_list') }}" aria-disabled="true">Cart</a>
							<a class="nav-link" href="{{ path('app_logout') }}" aria-disabled="true">Logout</a>	
						{% endif %}
						
							
						</ul>
						<form action="{{ path('product_search') }}" class="d-flex">
							<input class="form-control me-2" name="key" type="search" placeholder="Search" aria-label="Search">
							<button class="btn btn-outline-success" type="submit">Search</button>
						</form>
					</div>
				</div>
			</nav>
		{% endblock %}
		{% block body %}{% endblock %}
		<div class="container col-md-6 text-center mt-3">
				{% for flash in app.session.flashBag.get('Info') %}
					<p class="alert alert-info">{{ flash }}</p>
				{% endfor %}
				{% for flash in app.session.flashBag.get('Warning') %}
					<p class="alert alert-danger">{{ flash }}</p>
				{% endfor %}
