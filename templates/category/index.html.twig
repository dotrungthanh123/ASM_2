{% extends "base.html.twig" %}

{% block body %}
	<h1 class="text-center mt-4">List of category</h1>
	<table class="table align-middle mb-0 bg-white">
		<thead class="bg-light">
			<tr>
				<th class="text-center">Category</th>
				<th class="text-center">Description</th>
				<th class="text-center">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for cat in category %}
			<tr>
				<td>
					<div class="d-flex align-items-center">
						<img src="{{ cat.image }}" style="width: 45px; height: 45px" class="rounded-circle"/>
						<div class="ms-3">
							<p class="fw-bold mb-1"><a href="{{ path('category_detail', {'id' : cat.id}) }}">{{ cat.name }}</a></p>
						</div>
					</div>
				</td>
				<td class="text-center">{{ cat.description }}</td>
						<td class="text-center">
							<button type="button" class="btn btn-link btn-sm btn-rounded">
								<a href="{{ path('category_detail', {'id' : cat.id}) }}">
									<img src="{{ asset('images/detail.png') }}" width="40" height="40">
								</a>
							</button>
							<button type="button" class="btn btn-link btn-sm btn-rounded">
								<a href="{{ path('category_edit', {'id' : cat.id}) }}">
									<img src="{{ asset('images/edit.png') }}" width="40" height="40">
								</a>
							</button>
							<button type="button" class="btn btn-link btn-sm btn-rounded">
								<a href="{{ path('category_delete', {'id' : cat.id}) }}">
									<img src="{{ asset('images/delete.png') }}" width="40" height="40">
								</a>
							</button>
						</td>            
			</tr>
		</tbody>
		{% endfor %}
	</table>

{% endblock %}
