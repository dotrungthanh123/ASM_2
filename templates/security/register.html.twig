{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block header %}{% endblock %}

{% block body %}
{% block style %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
	<link rel="stylesheet" href="mycss/mystyle.css">
{% endblock %}
	<section class="Form my-4 mx-5">
		<div class="container">
			<div class="row g-0">
				<div class="col-lg-6">
					<img src="{{asset('images/laptop.png')}}" class="img-fluid" alt="">
				</div>
				<div class="col-lg-6 px-5 pt-5">
					<h1 class="font-weight-bold py-3">MTM Tech</h1>
					<h4>Please fill the form</h4>
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						<div class="form-row ">
							<div class="col-lg-8">
								<input type="text" placeholder="Username" name="username" class="form-control mb-3 mt-3" required autofocus>
							</div>
						</div>
						<div class="form-row">
							<div class="col-lg-8">
								<input type="password" . name="password" class="form-control mb-3" placeholder="Password" required>
							</div>
						</div>
                        <div class="form-row">
							<div class="col-lg-8">
								<input type="password" . name="repassword" class="form-control mb-3" placeholder="RePassword" required>
							</div>
						</div>
						<div class="form-row">
							<div class="col-lg-8">
								<button type="submit" class="btn1 mb-3">Register</button>
							</div>
						</div>						
						</p>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
{% block footer %}{% endblock %}
