{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}
{% block header %}{% endblock %}


{% block body %}
	<section class="Form my-4 mx-5">
		<div class="container">
			<div class="row g-0">
				<div class="col-lg-6">
					<img id="imgl" src="{{asset('images/laptop.png')}}" class="img-fluid" alt="">
				</div>
				<div class="col-lg-6 px-5 pt-5">
					<h1 class="font-weight-bold py-3">Logo</h1>
					<h4>Please sign into your account</h4>
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								You are logged in as
								{{ app.user.username }},
								<a href="{{ path('logout') }}">Logout</a>
							</div>
						{% endif %}

						<div class="form-row ">
							<div class="col-lg-8">
								<input type="text" placeholder="Username" name="username" class="form-control mb-3 mt-3" required autofocus>
							</div>
						</div>
						<div class="form-row">
							<div class="col-lg-8">
								<input type="password" . name="password" class="form-control mb-3" placeholder="Password" required>
							</div>
						</div>
						<div class="form-row">
							<div class="col-lg-8">
								<button type="submit" class="btn1 mb-3">Login</button>
							</div>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<a href="">Forgot password?</a>
						<p>Don't have an account?<a href="" href="{{ path('register') }}">Register</a>
						</p>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
{% block footer %}{% endblock %}
