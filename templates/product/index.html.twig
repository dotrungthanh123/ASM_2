{% extends "base.html.twig" %}

{% block body %}
<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        {% for product in products %}
          <td>
            <div class="d-flex align-items-center">
              <img
                  src="{{ product.image }}"
                  style="width: 45px; height: 45px"
                  class="rounded-circle"
                  />
              <div class="ms-3">
                <p class="fw-bold mb-1">{{ product.name }}</p>
                <p class="text-muted mb-0">{{ product.manufacturer.name }}</p>
              </div>
            </div>
          </td>
          <td>
          <p class="fw-normal mb-1">{{ (product.category | first).name }}</p>
          {% for category in product.category | slice(1) %}
            <p class="text-muted mb-0">category.name</p>
          {% endfor %}
          </td>
          <td>
            <span class="badge badge-success rounded-pill d-inline">{{ product.quantity }}</span>
          </td>
          <td>$ {{ product.price }}</td>
          <td>
            <button type="button" class="btn btn-link btn-sm btn-rounded">
              <a href="{{ path('product_detail', {'id' : product.id}) }}">Detail</a>
            </button>
            <button type="button" class="btn btn-link btn-sm btn-rounded">
              <a href="{{ path('product_edit', {'id' : product.id}) }}">Edit</a>
            </button>
            <button type="button" class="btn btn-link btn-sm btn-rounded">
              <a href="{{ path('product_delete', {'id' : product.id}) }}">Delete</a>
            </button>
          </td>
        {% endfor %}
    </tr>
  </tbody>
</table>
	<section id="products" class="products">
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div class="headline text-center mb-5">
						<h2 class="pb-3 position-relative d-inline-block">FEATURED PRODUCTS</h2>
					</div>
				</div>
			</div>
			<div class="row">
				{% for product in products %}
					<div class="col-sm-6 col-lg-4">
						<a href="#" class="d-block text-center mb-4">
							<div class="product-list">
								<div class="product-image position-relative">
									<span class="sale">Sale</span>
									<img src="#" alt="products" class="img-fluid product-image-first">
									<img src="#" alt="products" class="img-fluid product-image-secondary">
								</div>
								<div class="product-name pt-3">
									<h3 class="text-capitalize">Product name</h3>
									<p class="mb-0 amount">$400.00
										<del>$580.00</del>
									</p>
									<button type="button" class="add_to_Card">ADD TO CARD</button>
								</div>
							</div>
						</a>
					</div>
				</div>

			{% endfor %}
			<!-- Scroll Backt To Top -->
			<div id="scrollUp" title="Scroll To Top">
				<a href="#home">
					<span class="ti-arrow-up fs-4 text-white"></span>
				</a>
			</div>
		{% endblock %}
